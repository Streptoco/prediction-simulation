<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.AdminAllocationController">
   <children>
      <VBox alignment="CENTER" prefHeight="323.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="315.0" prefWidth="600.0" spacing="5.0">
               <children>
                  <ListView fx:id="requestListView" prefHeight="200.0" prefWidth="200.0" />
                  <Separator orientation="VERTICAL" prefHeight="298.0" prefWidth="11.0" />
                  <TextArea fx:id="requestTextArea" prefHeight="298.0" prefWidth="349.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="55.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Button fx:id="approveButton" disable="true" mnemonicParsing="false" onAction="#approveRequest" prefWidth="63.0" text="Approve" />
                  <Button fx:id="denyButton" disable="true" mnemonicParsing="false" onAction="#denyRequest" prefWidth="63.0" text="Deny" />
               </children>
               <padding>
                  <Insets left="45.0" top="3.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" />
   </padding>
</VBox>
